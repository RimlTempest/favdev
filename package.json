{
  "name": "favdev",
  "author": "Riml",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "^16.17.0",
    "npm": "当プロジェクトではnpmではなくyarnを利用してください。"
  },
  "packageManager": "yarn@1.22.19",
  "scripts": {
    "build:1-generate": "prisma generate",
    "build:2-next": "cross-env NODE_ENV=production next build",
    "build:3-server": "tsc --project tsconfig.server.json",
    "build:4-migrate": "prisma migrate deploy",
    "build": "run-s build:*",
    "build-sqlite": "run-s generate-sqlite migrate-sqlite build:3-server && next build",
    "generate": "prisma generate",
    "generate-sqlite": "prisma generate --schema=./prisma/_sqlite/schema.prisma",
    "postinstall": "prisma generate",
    "migrate-sqlite": "prisma migrate dev --name init --schema=./prisma/_sqlite/schema.prisma",
    "dev:wss": "cross-env PORT=3001 tsx watch src/server/wssDevServer.ts --tsconfig tsconfig.server.json ",
    "dev:next": "next dev",
    "dev": "run-p dev:*",
    "dev-sqlite": "run-s generate-sqlite migrate-sqlite && run-p dev:*",
    "dev-nuke": "rm -rf prisma/*.db**",
    "db-up": "docker-compose up -d",
    "db-seed": "prisma db seed",
    "db-migrate-dev": "prisma migrate dev",
    "db-nuke": "docker-compose down --volumes --remove-orphans",
    "dx": "run-s db-up db-migrate-dev db-seed dev",
    "migrate-dev": "prisma migrate dev",
    "migrate": "prisma migrate deploy",
    "start": "cross-env NODE_ENV=production node dist/server/prodServer.js",
    "studio": "prisma studio",
    "lint": "eslint src --report-unused-disable-directives",
    "lint:html": "yarn html:lint",
    "lint:fix": "yarn lint --fix",
    "test:unit": "jest --watch",
    "test": "playwright test",
    "test-dev": "cross-env APP_ENV=test start-server-and-test dev-sqlite 3000 test",
    "test-start": "cross-env APP_ENV=test WS_URL=ws://localhost:3000 start-server-and-test start 3000 test",
    "check-types": "tsc --noEmit",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "prettier": {
    "printWidth": 80,
    "trailingComma": "all",
    "singleQuote": true,
    "semi": true
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn lint",
      "yarn lint:fix"
    ]
  },
  "dependencies": {
    "@headlessui/react": "^1.7.7",
    "@prisma/client": "^4.7.1",
    "@tanstack/react-query": "^4.3.8",
    "@trpc/client": "^10.7.0",
    "@trpc/next": "^10.7.0",
    "@trpc/react-query": "^10.7.0",
    "@trpc/server": "^10.7.0",
    "clsx": "^1.1.1",
    "daisyui": "^2.46.1",
    "next": "^13.0.0",
    "next-auth": "^4.14.0",
    "next-pwa": "^5.6.0",
    "node-fetch": "^2.6.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.7.1",
    "superjson": "^1.7.4",
    "tsx": "^3.9.0",
    "ws": "^8.0.0",
    "zod": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.7",
    "@playwright/test": "^1.26.1",
    "@storybook/addon-actions": "^6.5.15",
    "@storybook/addon-essentials": "^6.5.15",
    "@storybook/addon-interactions": "^6.5.15",
    "@storybook/addon-links": "^6.5.15",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/builder-webpack5": "^6.5.15",
    "@storybook/manager-webpack5": "^6.5.15",
    "@storybook/react": "^6.5.15",
    "@storybook/testing-library": "^0.0.13",
    "@storybook/testing-react": "^1.3.0",
    "@tanstack/react-query-devtools": "^4.3.8",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/node": "^18.7.20",
    "@types/node-fetch": "^2.5.11",
    "@types/react": "^18.0.9",
    "@types/ws": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "autoprefixer": "^10.4.7",
    "babel-loader": "^8.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.30.0",
    "eslint-config-next": "^13.1.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "lint-staged": "^13.1.0",
    "markuplint": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "prettier": "^2.7.1",
    "prisma": "^4.7.1",
    "start-server-and-test": "^1.12.0",
    "tailwindcss": "^3.1.6",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^4.8.3"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
